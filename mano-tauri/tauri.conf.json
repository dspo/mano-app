{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Mano",
  "version": "0.1.0",
  "identifier": "io.dspo.mano",
  "build": {
    "beforeDevCommand": "pnpm dev --port 1420",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../mano-ui/dist"
  },
  "app": {
    "windows": [
      {
        "title": "",
        "width": 1200,
        "height": 900,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": "-"
    }
  }
}
